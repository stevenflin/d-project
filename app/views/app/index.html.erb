<h1 class='heading'>DT</h1><h2 class='heading'>Project</h2>
<div class='home-box'>
	<div class='register'>
		<h1>REGISTER</h1>
		<div><%= notice %></div>
		<%= form_for(:user, :url => {:action => 'create'}) do |f| %>
			<div class='field'>
				<label>Company name</label>
				<div>
					<%= f.text_field :name %>
				</div>
			</div>
			<div class='field'>
				<label>Description</label>
				<div>
					<%= f.text_area :description %>
				</div>
			</div>
			<div class='field'>
				<label>We are a(n)...</label>
				<%= f.select :kind, { :Agency => 'Agency', :Brand => 'Brand' } %>
			</div>
			<%= submit_tag("Register") %>
		<% end %>
	</div>
	<h4>-------- or --------</h4>
	<div class='log-in'>
		<h1>LOG IN</h1>
		<%= form_tag('/user', :method => 'get') do %>
			<div class='field'>
			<label>Select a user</label>
			  <%= select_tag 'user_id', options_for_select(@users.collect{ |u| [u.name, u.id] }) %>
			</div>
			<%= submit_tag("Log In") %>
		<% end %>
	</div>
</div>

